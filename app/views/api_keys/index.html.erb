<%= simple_form_for ApiKey.new do |f| %>
  <%= f.input :name %>
  <%= f.submit "Add New Key" %>
<% end %>

<% if @api_keys.count > 0 %>
<table class="table table-hover table-striped" >
  <thead>
    <tr>
      <th>Name</th>
      <th>Key</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @api_keys.each do |ak| %>
    <tr>
      <td><%= ak.name %></td>
      <td><%= ak.access_token %></td>
      <td><%= button_to "delete", ak, method: :delete, data: {confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<% end %>
