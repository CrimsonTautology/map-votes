<!DOCTYPE html>
<html>
  <head>

    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
  </head>
  <body>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Map Votes", root_path, class: "brand" %>
        </div>

        <div class="col-sm-3 col-md-3 pull-left">
          <%= form_tag maps_path, method: "get" do %>
            <%= text_field_tag :search, params[:search], size: 35 %>
            <%= submit_tag "Search Maps", name: nil %>
          <% end %>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse>
          <ul class ="nav navbar-nav">
            <li><%= link_to "Map List", maps_path %></li>
            <% if current_user_admin? %>
              <li><%= link_to "Add Map", new_map_path %></li>
              <li><%= link_to "Add API Key", api_keys_path %></li>
            <% end %>
            <% if current_user %>
              <li>Welcome <%= current_user.nickname %></li>
              <li><%= link_to "Log Out", logout_path %></li>
              <%= link_to image_tag(current_user.avatar_url, alt: "avatar"), current_user.profile %>
            <%else %>
              <li><%= link_to image_tag("sits_small.png", alt: "Sign in with Steam"), "/auth/steam" %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <%= render partial: "shared/flash_messages", flash: flash %>

    <div class="container" >
      <%= yield %>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-bottom">
      <div class="row">
        <div class="col-lg-12">
          <p><%= link_to "Powered By Steam", "http://steampowered.com" %></p>
        </div>
      </div>
    </div>

    <%= debug(params) if Rails.env.development? %>
  </body>
</html>
